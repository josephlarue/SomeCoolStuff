  <div class="card_title">
        <%= link_to "#{article.title}", article_path(article[:id]), style:"text-decoration:none; color:white;" %>
  </div>
</div>
</li>
<%elsif type_of_card == 4%>
<li class="flex-item">
  <div class="card 4">
