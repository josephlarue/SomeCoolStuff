<%= render 'shared/navbar' %>

<ul class="flex-container">
<%@articles.each do |article|%>
<%type_of_card = rand(1..4)%>
<%if type_of_card == 1%>
<li class="flex-item">
<div class="card 1">
  <div class="card_image"> <img src="https://media3.giphy.com/media/l4hLylBTtz5LO5F6g/giphy.gif?cid=ecf05e47vpo5axhu64mrh7tmwed810e7iaytss9rm91dxns4&rid=giphy.gif" /> </div>
  <div class="card_title title-white">
    <%= link_to "#{article.title}", article_path(article[:id]), style:"text-decoration:none; color:white;" %>
  </div>
</div>
</li>
<%elsif type_of_card == 2%>
<li class="flex-item">
<div class="card 2">
